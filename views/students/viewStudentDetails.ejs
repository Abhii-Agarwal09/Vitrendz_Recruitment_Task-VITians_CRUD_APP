<%- layout('layout/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/students.css" />

<div class="container d-flex flex-column mb-5 mt-5">
    <div class="mb-3">
        <a href="/api/v1/students" class="btn btn-primary">Back To All Students</a>
    </div>
    <div class="card mt-3 mb-3" style="width: 18rem">
        <img src="/images/user-avatar.png" class="card-img-top" alt="..." />
        <div class="card-body">
            <h5 class="card-title"><%= student.name %></h5>
            <p class="card-text">
                <span>Registeration number:</span> <%= student.registerNumber %>
            </p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <span>DOB: </span> <%- student.dob.toLocaleDateString('en-GB') %> 
            </li>
            <li class="list-group-item">
                <span>Department: </span> <%= student.department %>
            </li>
            <li class="list-group-item">
                <span>Graduation year: </span> <%= student.graduationYear %>
            </li>
            <li class="list-group-item">
                <span>CGPA: </span> <%= student.cgpa %>
            </li>
        </ul>
        <div class="card-body d-flex justify-content-between align-items-center">
            <a href="/api/v1/students/<%= student._id %>/edit" class="card-link btn btn-warning m-3"
                >Edit Details</a
            >
            <form
                action="/api/v1/students/<%= student._id %>?_method=DELETE"
                method="POST"
            >
                <button href="#" class="card-link btn btn-danger m-3">Delete Student</button>
            </form>
        </div>
    </div>
</div>
